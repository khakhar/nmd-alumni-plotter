<h1>
  Users
  <%= link_to 'Add User', new_member_path, class: "btn btn-success pull-right" %>
</h1>
<hr/>

<table class="table table-bordered">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to 'Edit', edit_member_path(user), :class => "btn btn-primary" %>
        <% if @users.count > 1 && user.id != current_user.id %>
          <%= link_to 'Remove', member_path(user), {
              class: "btn btn-danger",
              method: :delete,
              data: { confirm: 'Are you sure?' }
            } %>
        <% end %>
      </td>
    </tr>
  <% end %>

</table>

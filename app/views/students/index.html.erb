<h1>
  Students
  <%= link_to 'Add Student', new_student_path, class: "btn btn-success pull-right" %>
</h1>
<hr/>

<% @students.each do |student| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h3><%= student.name %></h3>
      <%= student.place.try(:name_with_country) %>
      <br/>
      <% if student.approved? %>
        <span class="label label-success">Approved</span>
      <% else %>
        <span class="label label-warning">Approved</span>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to(
            "<span class='glyphicon glyphicon-list'></span> Show".html_safe,
            student,
            class: "btn btn-info btn-sm")
      %>

      <%= link_to(
            "<span class='glyphicon glyphicon-edit'></span> Edit".html_safe,
            edit_student_path(student),
            class: "btn btn-primary btn-sm")
      %>

      <%= link_to(
            "<span class='glyphicon glyphicon-remove-circle'></span> Delete".html_safe,
            student,
            method: :delete,
            class: "btn btn-danger btn-sm",
            data: { confirm: 'Are you sure?' })
      %>
    </div>
  </div>
<% end %>


<%= paginate @students %>

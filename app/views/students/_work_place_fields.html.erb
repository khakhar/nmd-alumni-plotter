<div class="panel panel-default nested-fields work-place">

  <div class="panel-heading">
    <h3 class="panel-title">
      <%= f.select(
          :engagement_type_id,
          EngagementType.all.collect {|i| [i.name, i.id]},
          {selected: f.object.engagement_type_id},
          {class: "engagement_type_id"}
        ) %>
    </h3>
  </div>

  <div class="panel-body">
    <div class="form-group">
      <%= f.label :organisation_name %><br/>
      <%= f.text_field :organisation_name, class: "organisation_name", autocomplete: "off", spellcheck: "off" %>
    </div>

    <div class="form-group organisation-website-wrapper">
      <%= f.label :organisation_website %><br/>
      <%= f.text_field :organisation_website, class: "organisation_website", autocomplete: "off", spellcheck: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :place_name %><br/>
      <%= f.text_field :place_name, class: "place_name", autocomplete: "off", spellcheck: "off" %>
    </div>

    <div class="form-group project-title-wrapper">
      <%= f.label :project_title %><br/>
      <%= f.text_field :project_title, class: "project_title" %>
    </div>

    <div class="form-group">
      <%= f.check_box :current %> <%= f.label :current, "Currently working here?" %>
    </div>

    <%= link_to_remove_association "remove", f, class: "btn btn-danger btn-sm" %>
  </div>

</div>
